<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control up-h-38-form mb-0" %>
     </div>


     <div>
 <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "username", class: "form-control up-h-38-form mb-0" %>
    </div>

     <div>
 <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "first_name", class: "form-control up-h-38-form mb-0" %>
    </div>

         <div>
 <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last_name", class: "form-control up-h-38-form mb-0" %>
    </div>

  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control up-h-38-form mb-0" %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
