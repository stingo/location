<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to "Conversations", conversations_path %> > Conversation #<%= @conversation.id %></h1>
      <%= link_to t("edit"), edit_conversation_path(@conversation), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
            <div class="mb-4">
        <h5>Sender</h5>
        <%= @conversation.sender_id %>
      </div>
            <div class="mb-4">
        <h5>Recipient</h5>
        <%= @conversation.recipient_id %>
      </div>
          </div>
  </div>
</div>
