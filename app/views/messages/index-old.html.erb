<!-- Modal -->
<div class="modal fade" id="chats_modal" tabindex="-1" role="dialog" aria-labelledby="modal-users" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title h6" id="myLargeModalLabel">Charts</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <div class="list-group list-group-flush w-100">
    
    
    
 





<% @conversations.each do |conversation| %>
   <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
         <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>

  

    <div class="list-group-item">
        <div class="row flex-column flex-md-row align-items-center">
    <div class="col-auto">
        <!-- Avatar -->
        <a href="<%= conversation_messages_path(conversation) %>" class="h5 text-sm mb-0">
                                <figure class="avatar">
                                    <span class="avatar-title bg-info rounded-circle"><%= recipient.username.chars.first %></span>
                                </figure>
        </a>



    </div>
    <div class="col ml-md-n2 text-center text-md-left">
        
        <a href="<%= conversation_messages_path(conversation) %>" class="h5 text-sm mb-0"><%= recipient.username.titleize %>
          
        </a>
        <div>

            <span class="text-success"><%= recipient.conversations.count  %></span>
            <small><%#= "#{time_ago_in_words(recipient.previous_sign_in_at || Time.now)} ago" %></small>
        </div>
    </div>
    <hr class="divider divider-fade my-3 d-md-none" />
    <div class="col-12 col-md-auto d-flex justify-content-between align-items-center">
      <a href="<%= conversation_messages_path(conversation) %>">  
        <i class="fa fa-comment-alt" style="color: #47BB75"></i>
      </a>
        <!-- Dropdown -->

        <div class="dropdown ml-2">
            <a href="#!" class="action-item" role="button" data-toggle="dropdown" aria-haspopup="true" data-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
            </a>

            <div class="dropdown-menu dropdown-menu-right">

                <a href="/users/<%= recipient.username.downcase %>" class="dropdown-item">
                    Go to user
                </a>

                <a href="/contacts/new" class="dropdown-item">
                    Report abuse
                </a>

            </div>
        </div>
    </div>
</div>

